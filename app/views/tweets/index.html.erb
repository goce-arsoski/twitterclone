<h1>Tweets</h1>

<h3><%= link_to 'New Tweet', new_tweet_path %></h3>

<div>
  <ul>
    <% @tweets.each do |tweet| %>
      <li>
        <%= link_to tweet.user, tweet_path(tweet) %>
        <%= link_to '- Edit -', edit_tweet_path(tweet) %>
        <%= link_to '- Delete -', tweet_path(tweet), method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' } %>
        <%= link_to '- All -', tweets_all_path(tweet.user) %>
      </li>
    <% end %>
  </ul>
</div>
