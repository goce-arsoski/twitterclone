<div class="card">
  <header class="card-header">
    <p class="card-header-title has-background-grey-light">
      <%= tweet.user %>
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <p>
        <%= tweet.content %>
      </p>
    </div>
  </div>
  <nav class="level-right">
    <div class="level">
      <span class="is-size-6 is-italic">
        <%= tweet.updated_at.localtime.strftime("%B %d, %Y - %H:%M") %>
      </span>
    </div>
  </nav>
  <footer class="card-footer">
    <% if local_assigns[:show] %>
      <%= link_to 'Back', root_path, class: 'card-footer-item button is-info' %>
    <% else %>
      <%= link_to 'View', tweet_path(tweet), class: 'card-footer-item button is-info' %>
    <% end %>

    <% if local_assigns[:show] %>
      <%= link_to 'New Comment', new_tweet_comment_path(tweet), class: 'card-footer-item button is-light' %>
    <% else %>
      <%= link_to 'User Tweets', tweets_all_path(tweet.user), class: 'card-footer-item button is-success' %>
    <% end %>

    <%= link_to 'Edit', edit_tweet_path(tweet), class: 'card-footer-item button is-link' %>
    <%= link_to 'Delete', tweet_path(tweet), class: 'card-footer-item button is-danger',
      method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' } %>
  </footer>
</div>
