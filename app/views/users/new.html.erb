<div class="container">
  <div class="miltiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-4">
        <h1 class="title has-text-centered">New User</h1>
      </div>
    </div>

    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2>
          <%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="column is-4 is-offset-4">
      <%= form_with model: @user, local: true do |form| %>
        <div class="control">
          <p>
            <%= form.label :name, class: 'label is-large' %>
            <%= form.text_field :name, class: 'input is-medium', placeholder: 'Your name' %>
          </p>
        </div>
        <br>

        <div class="control">
          <p>
            <%= form.label :email, class: 'label is-large' %>
            <%= form.text_field :email, class: 'input is-medium', placeholder: 'Your email' %><br>
          </p>
        </div>
        <br>

        <div class="control">
          <p>
            <%= form.label :password, class: 'label is-large' %>
            <%= form.text_field :password, class: 'input is-medium', placeholder: 'Password' %><br>
          </p>
        </div>
        <br>

        <div class="control">
          <p>
            <%= form.label :password_confirmation, class: 'label is-large' %>
            <%= form.text_field :password_confirmation, class: 'input is-medium', placeholder: 'Confirm Password' %><br>
          </p>
        </div>          
        <br>

        <div class="control">
          <p>
            <%= form.submit 'Create User', class: 'button is-success' %>
            <%= link_to 'Cancel', users_new_path, class: 'button is-danger' %>
          </p>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>
