<div class="container">
  <div class="miltiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-4">
        <h1 class="title has-text-centered">New User</h1>
      </div>
    </div>

    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2>
          <%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="column is-4 is-offset-4">
      <%= form_with model: @user, local: true do |form| %>
        <div class="field">
          <%= form.label :name, class: 'label' %>
          <div class="control">
            <%= form.text_field :name, class: 'input', placeholder: 'Your name' %>
          </div>
        </div>

        <div class="field">
          <%= form.label :email, class: 'label' %>
          <div class="control">
            <%= form.text_field :email, class: 'input', placeholder: 'Your email' %>
          </div>
        </div>
        
        <div class="field">
          <%= form.label :password, class: 'label' %>
          <p class="control has-icons-left">
            <%= form.text_field :password, class: 'input', type: 'password', placeholder: 'Password' %>            
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <%= form.label :password_confirmation, class: 'label' %>
          <p class="control has-icons-left">
            <%= form.text_field :password_confirmation, class: 'input', type: 'password', placeholder: 'Confirm Password' %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <p class="control">
            <%= form.submit 'Create User', class: 'button is-success' %>
            <%= link_to 'Cancel', users_signup_path, class: 'button is-danger' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
